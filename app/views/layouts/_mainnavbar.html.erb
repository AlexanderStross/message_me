<!-- Main Menu Partial -->
  <div class="ui mini inverted menu">
    <div class="ui container">
      <%= link_to 'Chatroom', root_path, class: 'item active' %>
    <a class="item">
      <%= current_user.username if !!current_user %>
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to 'Login', login_path, class: 'item' if !logged_in? %>
          <%= link_to "Log out", logout_path, method: :delete, class: 'item' if logged_in? %>
        </div>
      </div>
      <div class="item">
        <%= link_to 'Sign Up', signup_path, class: 'ui primary button' if !logged_in? %>
      </div>
    </div>
  </div>
</div>
<!-- End Main Menu Partial -->
