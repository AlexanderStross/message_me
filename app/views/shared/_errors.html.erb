<% if obj.errors.any? %>
  <div class="ui error message">
        <i class="close icon"></i>
        <h4 class="alert-heading">The following errors prevented the
          <%= obj.class.name.downcase %>
          from being saved</h4>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
<% end %>
